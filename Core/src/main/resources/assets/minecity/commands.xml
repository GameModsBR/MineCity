<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE minecity-commands SYSTEM "http://gamemods.com.br/minecity-commands-1.0.dtd">
<minecity-commands modified="false" add-missing="true">
    <groups>
        <group id="root" cmd="minecity,mc">
            <desc>All MineCity commands</desc>
        </group>
        <group id="city" parent=",root" cmd="city,town,c,t">
            <desc>All city related commands</desc>
        </group>
        <group id="group" parent=",root,city" cmd="group">
            <desc>All group related commands</desc>
        </group>
        <group id="group.manager" parent="group" cmd="manager,managers">
            <desc>All group managers related commands</desc>
        </group>
        <group id="allow" parent="city" cmd="allow">
            <desc>Gives permission</desc>
        </group>
        <group id="deny" parent="city" cmd="deny">
            <desc>Revokes permission</desc>
        </group>
        <group id="allow.all" parent="allow" cmd="player">
            <desc>Gives permission to everybody, including players that were directly prohibited</desc>
        </group>
        <group id="deny.all" parent="deny" cmd="player">
            <desc>Prohibits everybody, including players that were directly allowed</desc>
        </group>
    </groups>
    <commands>
        <!-- General -->
        <command id="confirm" parent=",city,group,root" cmd="confirm">
            <desc>Confirms a dangerous action</desc>
        </command>

        <!-- Management -->
        <command id="city.create" parent="city" cmd="create,new">
            <desc>Creates a city</desc>
            <syntax>name (may have spaces)</syntax>
        </command>
        <command id="city.claim" parent="city" cmd="claim,expand">
            <desc>Claims a chunk to a city</desc>
            <syntax>[city name]</syntax>
        </command>
        <command id="city.disclaim" parent="city" cmd="disclaim,unclaim">
            <desc>Disclaims a chunk from a city</desc>
        </command>
        <command id="city.spawn" parent="city" cmd="go,spawn">
            <desc>Teleport you to the city</desc>
            <syntax>[city name]</syntax>
        </command>
        <command id="city.rename" parent="city" cmd="rename">
            <desc>Changes name of the city that you are inside</desc>
            <syntax>[new city name]</syntax>
        </command>
        <command id="city.transfer" parent="city" cmd="transfer">
            <desc>Transfer the city to an other player</desc>
            <syntax>[player name]</syntax>
        </command>
        <command id="city.setspawn" parent="city" cmd="setspawn">
            <desc>Changes the city's spawn location</desc>
        </command>
        <command id="city.map" parent="city" cmd="map">
            <desc>Show the cities around you</desc>
            <syntax>[big]</syntax>
        </command>

        <!-- Groups -->
        <command id="group.create" parent="group" cmd="create">
            <desc>Creates a new group</desc>
        </command>
        <command id="group.add" parent="group" cmd="add">
            <desc>Adds a player to a group</desc>
        </command>
        <command id="group.remove" parent="group" cmd="remove">
            <desc>Removes a player from a group</desc>
        </command>
        <command id="group.list" parent="group" cmd="list">
            <desc>Displays all city groups</desc>
        </command>
        <command id="group.info" parent="group" cmd="info">
            <desc>Displays details about a group</desc>
        </command>
        <command id="group.delete" parent="group" cmd="delete">
            <desc>Completely deletes a group from a city</desc>
        </command>
        <command id="group.add.manager" parent="group.manager" cmd="add">
            <desc>Adds a player as a group manager</desc>
        </command>
        <command id="group.remove.manager" parent="group.manager" cmd="remove">
            <desc>Adds a player as a group manager</desc>
        </command>

        <!-- Default permissions -->
        <command id="city.allow.enter" parent="allow" cmd="enter">
            <desc>Allows players to enter the city, will not affect players who are already inside.</desc>
            <syntax>[target]</syntax>
        </command>
        <command id="city.allow.click" parent="allow" cmd="click">
            <desc>Allows players to click on clickable blocks, like doors, buttons and levelers</desc>
            <syntax>[target]</syntax>
        </command>
        <command id="city.allow.pickup" parent="allow" cmd="pickup">
            <desc>Allows players to pickup dropped items</desc>
            <syntax>[target]</syntax>
        </command>
        <command id="city.allow.open" parent="allow" cmd="open">
            <desc>Allows players to open container like chests, furnaces, frames</desc>
            <syntax>[target]</syntax>
        </command>
        <command id="city.allow.pvp" parent="allow" cmd="pvp">
            <desc>Allows players to attack other players</desc>
            <syntax>[target]</syntax>
        </command>
        <command id="city.allow.pvc" parent="allow" cmd="pvc">
            <desc>Allows players to attack creatures</desc>
            <syntax>[target]</syntax>
        </command>
        <command id="city.deny.enter" parent="deny" cmd="enter">
            <desc>Deny players to enter the city, will not affect players who are already inside.</desc>
            <syntax>[target]</syntax>
        </command>
        <command id="city.deny.click" parent="deny" cmd="click">
            <desc>Deny players to click on clickable blocks, like doors, buttons and levelers</desc>
            <syntax>[target]</syntax>
        </command>
        <command id="city.deny.pickup" parent="deny" cmd="pickup">
            <desc>Deny players to pickup dropped items</desc>
            <syntax>[target]</syntax>
        </command>
        <command id="city.deny.open" parent="deny" cmd="open">
            <desc>Deny players to open container like chests, furnaces, frames</desc>
            <syntax>[target]</syntax>
        </command>
        <command id="city.deny.pvp" parent="deny" cmd="pvp">
            <desc>Deny players to attack other players</desc>
            <syntax>[target]</syntax>
        </command>
        <command id="city.deny.pvc" parent="deny" cmd="pvc">
            <desc>Deny players to attack creatures</desc>
            <syntax>[target]</syntax>
        </command>

        <!-- All permissions -->
        <command id="city.allow.all.enter" parent="allow" cmd="enter.all">
            <desc>Allows everybody to enter the city, including who were directly prohibited.</desc>
            <syntax>[target]</syntax>
        </command>
        <command id="city.allow.all.click" parent="allow" cmd="click.all">
            <desc>Allows everybody to click on clickable blocks, like doors, buttons and levelers. Will also allow who were directly prohibited.</desc>
            <syntax>[target]</syntax>
        </command>
        <command id="city.allow.all.pickup" parent="allow" cmd="pickup.all">
            <desc>Allows everybody to pickup dropped items, will also allow who were directly prohibited.</desc>
            <syntax>[target]</syntax>
        </command>
        <command id="city.allow.all.open" parent="allow" cmd="open.all">
            <desc>Allows everybody to open container like chests, furnaces, frames. Will also allow who were directly prohibited.</desc>
            <syntax>[target]</syntax>
        </command>
        <command id="city.allow.all.pvp" parent="allow" cmd="pvp.all">
            <desc>Allows everybody to attack other players, including who were directly prohibited.</desc>
            <syntax>[target]</syntax>
        </command>
        <command id="city.allow.all.pvc" parent="allow" cmd="pvc.all">
            <desc>Allows everybody to attack creatures, including who were directly prohibited.</desc>
            <syntax>[target]</syntax>
        </command>
        <command id="city.deny.all.enter" parent="deny" cmd="enter.all">
            <desc>Prohibits everybody to enter the city, including who were directly prohibited.</desc>
            <syntax>[target]</syntax>
        </command>
        <command id="city.deny.all.click" parent="deny" cmd="click.all">
            <desc>Prohibits everybody to click on clickable blocks, like doors, buttons and levelers. Will also prohibit who were directly prohibited.</desc>
            <syntax>[target]</syntax>
        </command>
        <command id="city.deny.all.pickup" parent="deny" cmd="pickup.all">
            <desc>Prohibits everybody to pickup dropped items. Will also prohibit who were directly prohibited.</desc>
            <syntax>[target]</syntax>
        </command>
        <command id="city.deny.all.open" parent="deny" cmd="open.all">
            <desc>Prohibits everybody to open container like chests, furnaces, frames. Will also prohibit who were directly prohibited.</desc>
            <syntax>[target]</syntax>
        </command>
        <command id="city.deny.all.pvp" parent="deny" cmd="pvp.all">
            <desc>Prohibits everybody to attack other players. Will also prohibit who were directly prohibited.</desc>
            <syntax>[target]</syntax>
        </command>
        <command id="city.deny.all.pvc" parent="deny" cmd="pvc.all">
            <desc>Prohibits everybody to attack creatures. Will also prohibit who were directly prohibited.</desc>
            <syntax>[target]</syntax>
        </command>
    </commands>
</minecity-commands>
